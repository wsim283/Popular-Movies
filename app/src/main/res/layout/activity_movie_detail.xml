<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="example.com.popularmovies.Detail.MovieDetailActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/MovieDetailThemeToolbar"
        android:id="@+id/movie_detail_toolbar">

        <TextView
            android:id="@+id/toolbar_title"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true" />  <!--for some reason
            maxLines did not allow marquee to work so I use the deprecated
            singleLine attribute because it works-->
    </android.support.v7.widget.Toolbar>

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/movie_detail_container"
       />

</LinearLayout>

